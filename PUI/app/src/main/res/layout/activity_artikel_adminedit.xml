<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EAF1">

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="57dp">

        <!-- LinearLayout untuk konten dalam ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Isi ScrollView disini -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- ImageView untuk gambar -->

                <ImageView
                    android:id="@+id/dasbordatas"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:background="@drawable/dasbordatas" />



                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="115dp"
                    android:layout_marginBottom="10dp"
                    android:text="Edit Artikel"
                    android:textColor="#F7EAF1"
                    android:textSize="37sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="235dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="71dp"
                    android:layout_marginEnd="141dp"
                    android:layout_marginBottom="10dp"
                    android:text="Baca artikel untuk menambah pengetahuanmu"
                    android:textAlignment="center"
                    android:textColor="#F7EAF1"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <!-- TextView dan ImageView lainnya -->

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppin_extra_bold"
                    android:text="Judul Artikel"
                    android:textColor="#AB4B7F"
                    android:textSize="20dp" />
                <!-- Duplikat elemen di bawahnya -->
            </FrameLayout>
            <EditText
                android:id="@+id/editTextText"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Masukkan Judul disini" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppin_extra_bold"
                    android:text="Penulis"
                    android:textColor="#AB4B7F"
                    android:textSize="20dp" />
                <!-- Duplikat elemen di bawahnya -->
            </FrameLayout>
            <EditText
                android:id="@+id/editTextPenulis"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Siapa penulisnya?" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppin_extra_bold"
                    android:text="Isi Artikel"
                    android:textColor="#AB4B7F"
                    android:textSize="20dp" />
                <!-- Duplikat elemen di bawahnya -->
            </FrameLayout>

            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Tulis artikelmu disini"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/button"
                android:layout_marginTop="32dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:backgroundTint="#AB4B7F"/>

            <!-- Tambahkan lebih banyak konten di sini jika diperlukan -->

        </LinearLayout>
    </ScrollView>

    <!-- Gambar dengan margin di bawah -->
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/navigatorbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="500dp" />

</RelativeLayout>