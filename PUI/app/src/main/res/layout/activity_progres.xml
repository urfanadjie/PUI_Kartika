<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EAF1">

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="57dp">

        <!-- LinearLayout untuk konten dalam ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Isi ScrollView disini -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- ImageView untuk gambar -->

                <ImageView
                    android:id="@+id/dasbordatas"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:background="@drawable/dasbordatas" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="88dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="282dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/aturberatbadan" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="10dp"
                    android:text="Jadwal Makan"
                    android:textColor="#F7EAF1"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="245dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="143dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="10dp"
                    android:text="Kendalikan kalori, raih bentuk tubuh yang diinginkan"
                    android:textColor="#F7EAF1"
                    android:textAlignment="center"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <!-- TextView dan ImageView lainnya -->

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/Image11"
                    android:layout_width="300dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/backgroundrencanamakan"
                    android:layout_marginLeft="55dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kebutuhan kalori harianmu"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="#4E4A4A"
                    android:textSize="17dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="86dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2500kkal"
                    android:textSize="32dp"
                    android:fontFamily="@font/poppin_bold"
                    android:textColor="#7F335C"
                    android:layout_marginTop="76dp"
                    android:layout_marginLeft="130dp"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rencana Makan Harian"
                    android:fontFamily="@font/poppin_bold"
                    android:textSize="22dp"
                    android:textColor="#7F335C"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="170dp"
                    />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:text="Tambah"
                    android:layout_marginTop="210dp"
                    android:layout_marginLeft="26dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:background="@drawable/backgroundmakan"
                    android:layout_marginTop="300dp"/>









                <!-- Duplikat elemen di bawahnya -->

            </FrameLayout>

            <!-- Tambahkan lebih banyak konten di sini jika diperlukan -->

        </LinearLayout>
    </ScrollView>

    <!-- Gambar dengan margin di bawah -->
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/navigatorbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="500dp" />

</RelativeLayout>
